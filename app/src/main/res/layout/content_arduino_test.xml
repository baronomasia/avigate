<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_arduino_test"
    tools:context="com.rabidllamastudios.avigate.ArduinoTestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_relative_arduino_status">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear_usb_status" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/tv_arduino_label_status"
                android:id="@+id/tv_arduino_label_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="18sp"
                android:text="@string/tv_arduino_value_status"
                android:id="@+id/tv_arduino_value_status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear_usb_status"
            android:paddingTop="4dp"
            android:id="@+id/layout_linear_arduino_output" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/tv_arduino_label_output"
                android:id="@+id/tv_arduino_label_output" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                android:id="@+id/tv_arduino_value_output" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_below="@+id/layout_relative_arduino_status"
        android:id="@+id/layout_relative_arduino_aileron">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear_arduino_aileron">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_aileron"
                android:id="@+id/tv_arduino_label_aileron"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:id="@+id/et_arduino_value_aileron" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_pin"
                android:id="@+id/tv_arduino_label_pin_aileron" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:text="@string/et_arduino_value_pin_aileron"
                android:id="@+id/et_arduino_value_pin_aileron" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear_arduino_aileron"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <SeekBar android:id="@+id/seekbar_aileron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_relative_arduino_aileron"
        android:paddingTop="6dp"
        android:id="@+id/layout_relative_arduino_elevator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear_arduino_elevator">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_elevator"
                android:id="@+id/tv_arduino_label_elevator"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:id="@+id/et_arduino_value_elevator" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_pin"
                android:id="@+id/tv_arduino_label_pin_elevator" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:text="@string/et_arduino_value_pin_elevator"
                android:id="@+id/et_arduino_value_pin_elevator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear_arduino_elevator"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <SeekBar android:id="@+id/seekbar_elevator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_relative_arduino_elevator"
        android:paddingTop="6dp"
        android:id="@+id/layout_relative_arduino_rudder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear_arduino_rudder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_rudder"
                android:id="@+id/tv_arduino_label_rudder"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:id="@+id/et_arduino_value_rudder" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_pin"
                android:id="@+id/tv_arduino_label_pin_rudder" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:text="@string/et_arduino_value_pin_rudder"
                android:id="@+id/et_arduino_value_pin_rudder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear_arduino_rudder"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <SeekBar android:id="@+id/seekbar_rudder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_relative_arduino_rudder"
        android:paddingTop="6dp"
        android:id="@+id/layout_relative_arduino_throttle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear_arduino_throttle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_throttle"
                android:id="@+id/tv_arduino_label_throttle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:id="@+id/et_arduino_value_throttle" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/tv_arduino_label_pin"
                android:id="@+id/tv_arduino_label_pin_throttle" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:textSize="20sp"
                android:text="@string/et_arduino_value_pin_throttle"
                android:id="@+id/et_arduino_value_pin_throttle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear_arduino_throttle"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <SeekBar android:id="@+id/seekbar_throttle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@id/layout_relative_arduino_throttle">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:text="@string/button_emergency_reset"
            android:id="@+id/button_emergency_reset"/>

    </RelativeLayout>

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:showLabels="false"
        app:textAboveThumbsColor="@color/colorAccent"
        android:visibility="invisible"
        android:id="@+id/seekbar_range" />

</RelativeLayout>
